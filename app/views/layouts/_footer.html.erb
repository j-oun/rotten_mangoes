<footer>
  <small>
    <% if current_user %>
      Signed in as <%= current_user.full_name %> 
      <% if current_user.try(:admin) %>
        (<a href="/admin/users/"><%= "admin_link" %></a>)
      <% end %>
      | <%= link_to "Logout", logout_path %>
    <% else %>
      <%= link_to "Log In", login_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
  </small>
</footer>
<h1>List of Users</h1>

  <%= paginate @users %>

  <table>
    <thead>
    <tr>
    <th>ID</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Telephone</th>
    </tr>
    <tbody>
     <% @users.each do |user| %>
    <tr>
    <td><%= user.id %></td>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= user.email %></td>
    <% end %>
    </tr>
    </tbody>
    </thead>
  </table>



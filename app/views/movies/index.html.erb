<h1>Movie Land</h1>
 
  <%= form_tag(root_path, method: "get") do %>
    <%= label_tag(:search, "Search for:") %>
    <%= text_field_tag(:search, nil, placeholder: "title or director") %>
    <%= select_tag(:duration, options_for_select([
      ['Under 90 minutes', 1], ['Between 90 and 120 minutes', 2], ['Over 120 minutes', 3]
      ], session[:duration])) %>
    <%= submit_tag "Search" %>
  <% end %>

   <hr>
   <%= link_to "Submit a movie!", new_movie_path %>
   <%= render "movie" %>
    <hr> 
 


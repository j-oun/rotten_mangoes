<h1>List of All Users</h1>
    <%= paginate @users %>
    <hr>
    <%= link_to "Create New User", new_admin_user_path %><br>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                    <td><%= user.id %></td>
                    <td><%= user.firstname %></td>
                    <td><%= user.lastname %></td>
                    <td><%= user.email %>(<%= link_to "edit", edit_admin_user_path(user) %>, <%= link_to "delete", admin_user_path(user), method: :delete, data: { confirm: "You sure?" }%>)</td>
                    </tr>
                <% end %>
            </tbody>
        </thead>
    </table>


